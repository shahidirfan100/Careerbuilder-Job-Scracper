{
  "title": "CareerBuilder Camoufox Crawler Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrls": {
      "title": "Start URLs",
      "type": "string",
      "description": "URLs to start scraping from (job search pages), as JSON array",
      "editor": "textarea",
      "default": "[\"https://www.careerbuilder.com/jobs\"]",
      "prefill": "[\"https://www.careerbuilder.com/jobs\"]"
    },
    "searchKeywords": {
      "title": "Search Keywords",
      "type": "string",
      "description": "Job search keywords (e.g., 'software engineer')",
      "editor": "textfield",
      "default": "software engineer",
      "example": "software engineer"
    },
    "maxRequestsPerCrawl": {
      "title": "Max Requests per Crawl",
      "type": "integer",
      "description": "Maximum number of pages to scrape",
      "editor": "number",
      "default": 50,
      "minimum": 1,
      "maximum": 1000
    },
    "maxConcurrency": {
      "title": "Max Concurrency",
      "type": "integer",
      "description": "Maximum number of concurrent browser instances",
      "editor": "number",
      "default": 3,
      "minimum": 1,
      "maximum": 10
    },
    "proxyConfiguration": {
      "title": "Proxy Configuration",
      "type": "object",
      "description": "Apify Proxy (REQUIRED to avoid blocking - use RESIDENTIAL)",
      "editor": "proxy",
      "default": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"],
        "countryCode": "US"
      },
      "prefill": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"],
        "countryCode": "US"
      }
    }
  },
  "required": ["startUrls"]
}
