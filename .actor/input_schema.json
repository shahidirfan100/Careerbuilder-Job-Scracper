{
  "title": "CareerBuilder Job Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrl": {
      "title": "Direct Search URL (Recommended)",
      "type": "string",
      "description": "Paste a CareerBuilder search URL from your browser. This is the most reliable method.",
      "editor": "textfield",
      "pattern": "^https://www\\.careerbuilder\\.com/.*",
      "example": "https://www.careerbuilder.com/jobs?keywords=developer&location=remote"
    },
    "keyword": {
      "title": "OR Search by Keywords",
      "type": "string",
      "description": "Job titles or keywords (e.g., 'Software Engineer'). Leave empty if using Direct URL above.",
      "editor": "textfield",
      "example": "Software Engineer"
    },
    "location": {
      "title": "Location",
      "type": "string",
      "description": "City, state, or zip code (e.g., 'New York, NY')",
      "editor": "textfield",
      "example": "New York, NY"
    },
    "posted_date": {
      "title": "Posted Date",
      "type": "string",
      "description": "Filter jobs by posting date",
      "editor": "select",
      "default": "anytime",
      "enum": ["anytime", "24h", "7d", "30d"],
      "enumTitles": ["Anytime", "Last 24 hours", "Last 7 days", "Last 30 days"]
    },
    "radius": {
      "title": "Search Radius (miles)",
      "type": "integer",
      "description": "Search radius in miles",
      "editor": "number",
      "default": 50,
      "minimum": 1,
      "maximum": 250
    },
    "results_wanted": {
      "title": "Number of Jobs",
      "type": "integer",
      "description": "Maximum number of jobs to scrape",
      "editor": "number",
      "default": 100,
      "minimum": 1,
      "maximum": 10000
    },
    "max_pages": {
      "title": "Maximum Pages",
      "type": "integer",
      "description": "Maximum listing pages to process",
      "editor": "number",
      "default": 20,
      "minimum": 1,
      "maximum": 100
    },
    "mode": {
      "title": "Scraping Mode",
      "type": "string",
      "description": "API-first is fastest. HTML and Browser are fallbacks for blocking.",
      "editor": "select",
      "default": "preferApi",
      "enum": ["preferApi", "apiOnly", "htmlOnly"],
      "enumTitles": ["API-first (recommended)", "API-only", "HTML-only"]
    },
    "apiPageSize": {
      "title": "API Page Size",
      "type": "integer",
      "description": "Number of jobs per API page",
      "editor": "number",
      "default": 50,
      "minimum": 1,
      "maximum": 100
    },
    "searchApiUrl": {
      "title": "Custom API Endpoint (Optional)",
      "type": "string",
      "description": "Override with a known working JSON API endpoint",
      "editor": "textfield",
      "example": "https://www.careerbuilder.com/api/v3/search"
    },
    "apiHeadersJson": {
      "title": "API Headers (JSON)",
      "type": "string",
      "description": "Additional headers for API requests (JSON object)",
      "editor": "textarea",
      "example": "{\"x-requested-with\":\"XMLHttpRequest\"}"
    },
    "apiParamsJson": {
      "title": "API Params (JSON)",
      "type": "string",
      "description": "Additional query params for API requests (JSON object)",
      "editor": "textarea",
      "example": "{\"cb_apply\":\"false\"}"
    },
    "maxConcurrencyHttp": {
      "title": "HTTP Concurrency",
      "type": "integer",
      "description": "Max concurrent HTTP requests for API/HTML",
      "editor": "number",
      "default": 10,
      "minimum": 1,
      "maximum": 50
    },
    "maxRequestsPerMinute": {
      "title": "Max Requests per Minute",
      "type": "integer",
      "description": "Rate limit for HTTP crawler",
      "editor": "number",
      "default": 120,
      "minimum": 30,
      "maximum": 1000
    },
    "maxConcurrencyBrowser": {
      "title": "Browser Concurrency",
      "type": "integer",
      "description": "Max concurrent browser pages (Playwright fallback)",
      "editor": "number",
      "default": 2,
      "minimum": 1,
      "maximum": 5
    },
    "headless": {
      "title": "Headless Browser",
      "type": "boolean",
      "description": "Run Playwright headless (recommended for cloud)",
      "default": true
    },
    "useSitemap": {
      "title": "Use Sitemap Fallback",
      "type": "boolean",
      "description": "Seed job URLs from sitemap when listings are blocked",
      "default": true
    },
    "maxSitemapUrls": {
      "title": "Max Sitemap URLs",
      "type": "integer",
      "description": "Maximum job URLs to seed from sitemap",
      "editor": "number",
      "default": 200,
      "minimum": 0,
      "maximum": 2000
    },
    "cookies": {
      "title": "Browser Cookies (Optional)",
      "type": "string",
      "description": "Copy cookies from your browser to bypass blocking. Format: 'name1=value1; name2=value2'",
      "editor": "textarea",
      "example": "sessionid=abc123; token=xyz789"
    },
    "cookiesJson": {
      "title": "OR Cookies as JSON (Optional)",
      "type": "string",
      "description": "Cookies in JSON format (array or object)",
      "editor": "textarea",
      "example": "[{\"name\":\"sessionid\",\"value\":\"abc123\"}]"
    },
    "proxyConfiguration": {
      "title": "Proxy Configuration",
      "type": "object",
      "description": "Apify Proxy (REQUIRED to avoid blocking)",
      "editor": "proxy",
      "default": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"],
        "countryCode": "US"
      },
      "prefill": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"],
        "countryCode": "US"
      }
    }
  },
  "required": []
}
